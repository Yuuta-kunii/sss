<div class="registration-wrapper">
  <div class="container">
   <h2>登録画面</h2>
   <div class="row">
     <div class="col-md-offset-4 col-md-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
  
      <div class="field">
       <%= f.label :name,"名前",class:"text-white" %><br />
       <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "信頼関係構築のため、本名推奨" %>
      </div>

      <div class="field">
       <%= f.label :email,"メールアドレス",class:"text-white" %><br />
       <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "xxx@xxx" %>
      </div>
  
     <div class="field">
       <%= f.label :image_icon,"アイコン画像",class:"text-white" %><br />
       <%= f.file_field :image_icon, autofocus: true, autocomplete: "image_icon" %>
     </div>
  
     <div class="field">
       <%= f.label :profile,"プロファイル",class:"text-white" %><br />
       <%= f.text_area :profile, autofocus: true, autocomplete: "profile",placeholder: "摂食障害の経歴を記入" %>
     </div>
  

     <div class="field">
      <%= f.label :password,"ログイン用パスワード",class:"text-white" %>
      <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角6~12文字英大文字・小文字・数字それぞれ１文字以上含む" %>
     </div>

     <div class="field">
      <%= f.label :password_confirmation,"パスワード確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "上記と同じパスワードを入力" %>
     </div>

     <div class="actions">
      <%= f.submit "登録",class: "btn btn-block btn-white"  %>
     </div>
   <% end %>
   </div>
  </div>
 </div>
</div> 