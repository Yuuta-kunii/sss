<p><%= @user.name %></p>
<%= image_tag @user.image_icon.url %>
<p><%= @user.profile %></p>
 
<div id="follow-button-#{@user.id}"> 
 <% if current_user != @user %>
  <% if current_user.following?(@user) %>
   <%= render partial: 'relationships/unfollow_button', locals: {user: @user} %>
  <% else %>
   <%= render partial: 'relationships/follow_button', locals: {user: @user} %>
   <% end %>
  <% end %>
</div>   